.wlcrft_input_wrapper
    margin-bottom 2em 
    label
        float left
        width 250px
    input
    select
        display block
        margin-left 300px
        
#wellcrafted-support-send
    float right

#wellcrafted_support_send_request
    .inside
        margin 0
        padding 0

.wellcrafted_support_sendings_dates
    max-height 15em
    overflow-y auto
    padding 8px 12px
    text-align right
    h4
        margin 0 
    li
        border-bottom 1px solid #DDD
        padding-bottom .6em 
        &:last-child
            border-bottom none 
            padding-bottom 0 
    
.wellcrafted-send-actions
    border-top 1px solid #DDD
    clear both
    overflow hidden
    padding 10px
    
.wellcrafted_support_save_first_notice
    padding 2px 12px 8px
    text-align right
    
.wellcrafted_support_request_options_plugins_list
    label.active
        font-weight bold 
        
#wellcrafted_support_request_options
    option.active
        font-weight bold 
        